package ulcase

import (
	"bufio"
	"fmt"
	"os"
	"strings"
)

func capitalizeWords(s string) string {
	words := strings.Fields(s)
	var capitalizedWords []string
	for _, word := range words {
		if len(word) > 0 {

			capitalized := strings.ToUpper(string(word[0])) + strings.ToLower(word[1:])
			capitalizedWords = append(capitalizedWords, capitalized)
		}
	}
	return strings.Join(capitalizedWords, " ")
}

func main() {
	var n int
	fmt.Scanln(&n)

	scanner := bufio.NewScanner(os.Stdin)

	for i := 0; i < n; i++ {
		scanner.Scan()
		movieName := scanner.Text()

		sortedName := capitalizeWords(movieName)

		fmt.Println(sortedName)
	}
}
